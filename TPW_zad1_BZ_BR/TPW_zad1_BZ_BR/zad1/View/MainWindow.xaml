<Window x:Class="BallApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BallApp" Height="400" Width="600">
    <Grid>
        <Ellipse Fill="Blue" Width="{Binding Model.Radius}" Height="{Binding Model.Radius}"
                 Canvas.Left="{Binding Model.X}" Canvas.Top="{Binding Model.Y}" />
    </Grid>
</Window>

